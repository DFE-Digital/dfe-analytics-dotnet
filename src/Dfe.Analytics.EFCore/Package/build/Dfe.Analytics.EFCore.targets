<Project>
  <PropertyGroup>
    <BuildDependsOn>
      AddDfeAnalyticToolsToContent;
      $(BuildDependsOn)
    </BuildDependsOn>
  </PropertyGroup>

  <Target Name="AddDfeAnalyticToolsToContent">
    <ItemGroup>
      <_ToolFiles Include="$(MSBuildThisFileDirectory)..\tools\$(TargetFramework)\**\*" />

      <Content Include="@(_ToolFiles)">
        <TargetPath>dfe-analytics\%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>
  </Target>
</Project>
